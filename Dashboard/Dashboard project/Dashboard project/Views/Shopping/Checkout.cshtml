<div class='container-ch'>
    <div class='window'>
        <div class='order-info'>
            <div class='order-info-content'>
                <h2>Order Summary</h2>
                <div class='line'></div>
                <table class='order-table'>
                    <tbody>
                        <tr>
                            <form>
                                <input type="hidden" id="MyProductId" @Model.MyProductId/>
                            </form>
                            <td>
                                <img src="~/assets/images/@Model.Image" class='full-width circle'></img>
                            </td>
                            <td>
                                <br> <span class='thin'>@Model.ProductName</span>
                                <br>Capacity: @Model.Capacity GB<br> <span class='thin small'> Color: @Model.Color <br><br></span>
                            </td>

                        </tr>
                        <tr>
                            <td>
                                <div class='price'>@Model.Price SAR</div>
                            </td>
                        </tr>
                    </tbody>

                </table>
                <div class='line'></div>
                <div class='total'>
                    <span style='float:left;'>
                        <div class='thin dense'>Price (Inclusive of VAT 15%)</div>
                        <div class='thin dense'>Delivery</div>
                        TOTAL
                    </span>
                    <span style='float:right; text-align:right;'>
                        <div class='thin dense'>@Model.Total</div>
                        <div class='thin dense'>FREE</div>
@Model.Total SAR
                    </span>
                </div>
            </div>
        </div>
        <div class='credit-info'>
            <div class='credit-info-content'>
                <table class='half-input-table'>
                    <tr>
                        <td>Please select your card: </td>
                        <td>
                        </td>
                    </tr>
                </table>
                <img src='https://dl.dropboxusercontent.com/s/ubamyu6mzov5c80/visa_logo%20%281%29.png' height='80' class='credit-card-image' id='credit-card-image'>
                Card Number
                <input class="input-field" id="" required />
                Card Holder
                <input class="input-field" required />
                <table class='half-input-table'>
                    <tr>
                        <td>
                            Expires
                            <input class="input-field" required />
                        </td>
                        <td>
                            CVC
                            <input class="input-field" required />
                        </td>
                    </tr>
                </table>
                <button class='pay-btn'>
                    <a asp-action="Invoice"  asp-route-Id="@Model.Id">Buy Now</a>
                    </button>

            </div>

        </div>
    </div>
</div>