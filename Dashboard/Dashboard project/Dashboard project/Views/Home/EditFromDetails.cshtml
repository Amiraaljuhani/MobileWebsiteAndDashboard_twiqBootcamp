
@model ProductDetails
<div class="container my-5">
    <div class="row justify-content-center">
            <h1 class="mb-3">Update Product </h1>
            <form asp-action="UpdateProductsDetails" method="post">
            <div class="row ">
                <div class="col-md-6">
                    <input type="hidden" class="form-control" asp-for="@Model.Id" />
                </div>
                </div>
                <div class="row ">

                    <div class="col-md-6">
                        <label for="ProductName" class="form-label">Product Name </label>
                        <input asp-for="@Model.ProductName" type="text" class="form-control" id="ProductName" name="ProductName">
                    </div>
                    <div class="col-md-6">
                        <label for="Price" class="form-label">Price</label>
                        <input asp-for="@Model.Price" type="number" class="form-control" id="Price" name="Price">
                    </div>
                    <div class="col-md-6">
                        <label for="Capacity" class="form-label">Capcity</label>
                        <input asp-for="@Model.Capacity" type="number" class="form-control" id="Capacity" name="Capacity">
                    </div>
                    <div class="col-md-6">
                        <label for="color" class="form-label">Color</label>
                        <input asp-for="@Model.color" type="text" class="form-control" id="color" name="color">
                    </div>
                    <div class="col-md-6">
                        <label for="Model" class="form-label">Model</label>
                        <input asp-for="@Model.Model" type="text" class="form-control" id="Model" name="Model">
                    </div>
                    <div class="col-md-6">
                        <label for="MoreDetails" class="form-label">Disblay</label>
                        <input asp-for="@Model.MoreDetails" type="text" class="form-control" id="MoreDetails" name="MoreDetails">
                    </div>

                    <div class="col-md-6">
                        <label for="Qty" class="form-label">Qty</label>
                        <input asp-for="@Model.Qty" class="form-control" id="Qty" name="Qty" rows="5"></input>
                    </div>
                    <div class="col-md-6">
                    <label for="Image" class="form-label"> Image</label>
                        <input asp-for="@Model.Image"type="text" name="Image" id="Image" class="form-control " />
                    </div>
                <div class="col-12">
                    <label for="Deisplay" class="form-label">More Details</label>
                    <textarea asp-for="@Model.Deisplay" class="form-control" id="Deisplay" name="Deisplay" rows="5"></textarea>
                </div>


                    <div class="col-12 center mt-4">
                        <div class="row justify-content-center ">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-dark w-100 fw-bold ">Save Updates</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
